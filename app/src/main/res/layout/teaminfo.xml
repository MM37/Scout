<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teamInfo">

    <TextView
        android:text="Team Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTeamNumber"
        android:textSize="20sp"
        android:layout_alignStart="@+id/addTeamName"
        android:layout_alignTop="@+id/editTeamNumber"
        android:layout_alignBottom="@+id/editTeamNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTeamName"
        android:hint="Enter Team Name here"
        android:textSize="18sp"
        android:layout_alignTop="@+id/addTeamName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTeamNumber"
        android:hint="Enter Team Number Here"
        android:textSize="18sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editTeamName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Team Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/addTeamName"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/buttonBack"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSave"
        android:onClick="onSaveClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:onClick="onBackClick"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Autonomous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:layout_centerInParent="false"
        android:textSize="18sp"
        android:layout_below="@+id/addTeamNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView" />

    <TextView
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointCenterParkView"
        android:height="40dp"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/addTeamNumber" />

    <TextView
        android:text="Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/pointCenterParkView" />

    <TextView
        android:text="Robot parkes partially in center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:height="30dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/pointCenterParkView"
        android:layout_alignBottom="@+id/pointCenterParkView"
        android:layout_toStartOf="@+id/buttonSave" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aPartParkcheckBox"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:onClick="aPartParkCheckBoxClick" />

</RelativeLayout>
